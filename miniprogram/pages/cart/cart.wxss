.cart {
    padding: 20px;
    background-color: #f8f8f8;
}

.cart-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #e0e0e0;
}

.cart-item img {
    width: 80px;
    height: 80px;
    margin-right: 10px;
}

.cart-item-info {
    flex: 1;
}

.cart-item-price {
    color: #ff4d4f;
    font-weight: bold;
}

.cart-total {
    margin-top: 20px;
    font-size: 18px;
    font-weight: bold;
    text-align: right;
}