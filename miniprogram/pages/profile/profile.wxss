.profile {
    padding: 20px;
    background-color: #f5f5f5;
}

.profile-header {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.profile-info {
    margin-bottom: 15px;
    padding: 10px;
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.profile-info label {
    font-weight: bold;
}

.profile-info .value {
    color: #666;
}

.edit-button {
    margin-top: 20px;
    padding: 10px;
    background-color: #007aff;
    color: #ffffff;
    border-radius: 5px;
    text-align: center;
}