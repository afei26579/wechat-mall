body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}

.container {
    max-width: 750px;
    margin: 0 auto;
    padding: 10px;
}

.button {
    display: inline-block;
    padding: 10px 15px;
    background-color: #007aff;
    color: white;
    border-radius: 5px;
    text-align: center;
}

.button:hover {
    background-color: #005bb5;
}

.text-center {
    text-align: center;
}

.flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.hidden {
    display: none;
}